# ====================================
# 声音工坊 - 全局配置文件
# ====================================

# ------------------
# 后端服务配置
# ------------------
APP_NAME=VoiceNexus
APP_VERSION=1.0.0
HOST=0.0.0.0
BACKEND_PORT=8081

# 路径配置（相对项目根目录）
WEIGHTS_DIR=./weights
PRESETS_DIR=./presets
LOGS_DIR=./logs
INDEX_TTS_REPO_DIR=./index-tts
GENERATED_AUDIO_DIR=./generated_audio

# TTS 模型配置
MODEL_NAME=indextts-2.0
DEVICE=auto
DEFAULT_VOICE=default.wav

# 音频配置
SAMPLE_RATE=24000
MAX_TEXT_LENGTH=5000

# 上传配置
MAX_UPLOAD_SIZE=52428800

# ------------------
# 智能情感分析配置（后端 TTS 使用）
# ------------------
ENABLE_SMART_SENTIMENT=true
SENTIMENT_LLM_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/
SENTIMENT_LLM_API_KEY=your-api-key-here
SENTIMENT_LLM_MODEL=gemini-1.5-flash
SENTIMENT_LABELS=["happy","sad","angry","fear","surprise","neutral","default"]
SENTIMENT_TIMEOUT=10

# ------------------
# 前端配置
# ------------------
# TTS 后端地址（前端使用相对路径，通过 Next.js 服务端代理）
NEXT_PUBLIC_API_BASE_URL=/api

# GPU 后端服务器地址（Next.js 服务端代理目标）
# 切换 GPU 服务器只需修改这一行，然后重启前端服务
BACKEND_URL=http://i-2.gpushare.com:35808

# 大语言模型配置（用于魔法对话功能）
NEXT_PUBLIC_LLM_BASE_URL=http://localhost:11434/v1
NEXT_PUBLIC_LLM_API_KEY=ollama
NEXT_PUBLIC_LLM_MODEL=qwen2.5:latest

